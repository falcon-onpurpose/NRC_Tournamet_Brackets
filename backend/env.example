# NRC Tournament Program - Environment Configuration
# Copy this file to .env and update with your settings

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL (SQLite for development, PostgreSQL for production)
DATABASE_URL=sqlite:///./nrc_tournament.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/nrc_tournament

# Database password (for PostgreSQL)
DATABASE_PASSWORD=

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Secret key for JWT tokens and session management
SECRET_KEY=your-secret-key-change-in-production

# Access token expiration time (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server host (0.0.0.0 for all interfaces)
HOST=0.0.0.0

# Server port
PORT=8000

# Debug mode (true for development, false for production)
DEBUG=true

# Auto-reload on code changes (development only)
RELOAD=false

# =============================================================================
# ARENA INTEGRATION
# =============================================================================

# Arena system API URL
ARENA_API_URL=http://localhost:8001

# Arena system API key
ARENA_API_KEY=arena-api-key

# Arena communication timeout (seconds)
ARENA_TIMEOUT=30

# =============================================================================
# TOURNAMENT SETTINGS
# =============================================================================

# Default match duration (seconds)
DEFAULT_MATCH_DURATION=120

# Default pit activation time (seconds remaining)
DEFAULT_PIT_ACTIVATION_TIME=60

# Maximum teams per tournament
MAX_TEAMS_PER_TOURNAMENT=64

# Maximum Swiss rounds
MAX_SWISS_ROUNDS=10

# =============================================================================
# MULTI-USER SETTINGS
# =============================================================================

# Maximum concurrent users with full access
MAX_CONCURRENT_USERS=10

# Session timeout (minutes)
SESSION_TIMEOUT_MINUTES=60

# WebSocket heartbeat interval (seconds)
WEBSOCKET_HEARTBEAT_INTERVAL=30

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================

# Maximum file size for uploads (bytes)
MAX_FILE_SIZE=10485760

# Allowed CSV file extensions
ALLOWED_CSV_EXTENSIONS=.csv

# Upload directory
UPLOAD_DIR=./uploads

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (optional)
LOG_FILE=

# =============================================================================
# CORS SETTINGS
# =============================================================================

# Allowed origins for CORS
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Database connection pool size
DATABASE_POOL_SIZE=10

# Database max overflow
DATABASE_MAX_OVERFLOW=20

# Database pool recycle time (seconds)
DATABASE_POOL_RECYCLE=300

# =============================================================================
# PUBLIC DISPLAY SETTINGS
# =============================================================================

# Public display refresh rate (seconds)
PUBLIC_DISPLAY_REFRESH_RATE=5

# Public display timeout (seconds)
PUBLIC_DISPLAY_TIMEOUT=300

# =============================================================================
# EXPORT SETTINGS
# =============================================================================

# Export directory
EXPORT_DIR=./exports

# Maximum export size (bytes)
MAX_EXPORT_SIZE=52428800

# =============================================================================
# ARCHIVE SETTINGS
# =============================================================================

# Archive directory
ARCHIVE_DIR=./archives

# Maximum archive size (bytes)
MAX_ARCHIVE_SIZE=524288000

# =============================================================================
# PLATFORM DETECTION (Auto-detected)
# =============================================================================

# Platform type (auto-detected: windows, macos, linux, raspberry_pi)
PLATFORM=unknown

# Is Raspberry Pi (auto-detected)
IS_RASPBERRY_PI=false

# =============================================================================
# ENVIRONMENT OVERRIDES
# =============================================================================

# Environment type (development, production, testing)
ENVIRONMENT=development

# =============================================================================
# OPTIONAL: REDIS CONFIGURATION (for caching and background tasks)
# =============================================================================

# Redis URL (optional, for caching and background tasks)
# REDIS_URL=redis://localhost:6379

# =============================================================================
# OPTIONAL: EMAIL CONFIGURATION (for notifications)
# =============================================================================

# SMTP server (optional, for email notifications)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# =============================================================================
# NOTES
# =============================================================================

# 1. For production deployment:
#    - Set DEBUG=false
#    - Set RELOAD=false
#    - Use a strong SECRET_KEY
#    - Use PostgreSQL database
#    - Configure proper CORS origins
#    - Set up logging to file

# 2. For Raspberry Pi deployment:
#    - Platform will be auto-detected
#    - Settings will be automatically optimized
#    - Use SQLite database for simplicity

# 3. For development:
#    - Set DEBUG=true
#    - Set RELOAD=true
#    - Use SQLite database
#    - Enable detailed logging
